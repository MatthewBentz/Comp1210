/** This program will convert messages that are input by the user.
 *Activity 3
 *@mlb0119 Matthew Bentz
 *@version 9/10/18
 */
import java.util.Scanner;
/** Class defines the method for input and the conversions.
 */
public class MessageConverter  {
   /** main method for message input and conversion.
    *@param args Command line (unused)
    */
   public static void main(String[]args) { 
      Scanner userInput = new Scanner(System.in);
      // declaring variables
      String message = "";
      int outputType;
      String result = "";
      // requesting user input
      System.out.print("Type in a message and press enter:\n\t> ");
      message = userInput.nextLine();
      // requesting user input on the output type of the string
      System.out.print("\nOutput types:"
         + "\n\t0: As is "
         + "\n\t1: Trimmed"
         + "\n\t2: lower case"
         + "\n\t3: UPPER CASE"
         + "\n\t4: v_w_ls r_pl_c_d"
         + "\n\t5: Without first and last character"
         + "\nEnter your choice: ");
      outputType = Integer.parseInt(userInput.nextLine());
      // changing output type
      if (outputType == 0) { //as is
         result = message;
      } else if (outputType == 1) { // trimmed
         result = message.trim();
      } else if (outputType == 2) { // lower case
         result = message.toLowerCase();
      } else if (outputType == 3) { // upper case
         result = message.toUpperCase();
      } else if (outputType == 4) { // replace vowels
         result = message.replace("a", "_");
         result = result.replace("e", "_");
         result = result.replace("i", "_");
         result = result.replace("o", "_");
         result = result.replace("u", "_");
      } else if (outputType == 5) { // without first and last character
         result = message.substring(1, message.length() - 1);
      } else { //invalid input
         result = "Error: Invalid choice input.";
      }
      System.out.println("\n" + result);
      
   }
}
